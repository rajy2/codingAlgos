<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Cricket" transaction-type="RESOURCE_LOCAL">
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	    <class>com.cricket.Userinfo</class>
	    <class>com.cricket.TweetInfo</class>
	    <class>com.cricket.Comments</class>
	    <class>com.cricket.OdiTeams</class>
	    <class>com.cricket.T20Teams</class>
	    <class>com.cricket.Teams</class>
	    <class>com.cricket.TestTeams</class>
	    <class>com.cricket.News</class>
	    <class>com.cricket.Player</class>
	    <class>com.cricket.ArchivedMatch</class>
	    <class>com.cricket.UpcomingMatch</class>
	    <class>com.cricket.Worldcuphistory</class> 
	    <properties>
			<property name="eclipselink.jdbc.password" value="pintuyash"/>
			<property name="eclipselink.jdbc.user" value="postgres"/>
			<property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/cricket"/>
			<!-- property name="eclipselink.ddl-generation" value="drop-and-create-tables"/-->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
			<property name="eclipselink.logging.level" value="FINE"/>
		</properties>
	</persistence-unit>
</persistence>
